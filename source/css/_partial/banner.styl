.banner-container
  position: relative
  width: 100%
  height banner-height
  background-image: url(banner-url)
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  padding-bottom: banner-margin

  &:before
    position: absolute
    top: 0
    left: 0
    display: block
    content: ''
    width: 100%
    height: 100%
    opacity: 0.4
    background-color: #394245
    background-image: linear-gradient(234deg, #394245 0%, #000 100%)

  .banner-inner
    position: relative
    width: 100%
    height: 100%
    padding: 0 25px
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    color: #ffffff

    .header-title
      font-weight: 700
      font-size: 3rem
      line-height: 1.2

      a
        display: block
        text-align: center
    
    .header-subtitle
      font-size: 1.2rem

@media screen and (max-width: 760px)
  .banner-container
    height: banner-height-mobile
    .banner-inner
      .header-title
        font-size: 2rem
      .header-subtitle
        font-size: 0.9rem
