
.card-container
  max-width: max-content-width
  margin: 0 auto
  overflow: hidden

  .card-wrap
    display: flex
    flex-wrap: wrap

    .card-item
      position: relative
      overflow: hidden
      transition: transform 0.2s ease

      &:hover
        transform: translateY(-5px)

      &:nth-child(1n)
        color-block-default ""

      &:nth-child(2n)
        color-block-orange ""

      &:nth-child(3n)
        color-block-red ""

      &:nth-child(4n)
        color-block-violet ""

      &:nth-child(5n)
        color-block-blue ""

      &:nth-child(6n)
        color-block-yellow ""

      &.large
        flex: 1 1 60%

      &.img
        .card-cover
          position: absolute
          top: 0
          left: 0
          width: 100%
          height: 100%
          background-size: cover
          background-position: center
          background-repeat: no-repeat

          &:before
            display: block
            content: ''
            width: 100%
            height: 100%
            opacity: 0.4
            background-color: #394245
            background-image: linear-gradient(234deg, #394245 0%, #000 100%)

// 文章卡片
.card-container.card-articles
  .card-wrap
    margin: 0 -15px
    .card-item
      margin: 15px
      padding: 40px 38px 45px
      min-width: 350px
      min-height: 370px
      border-radius: 24px
      flex: 1 1 30%

// 分类卡片
.card-container.card-categories
  .card-wrap
    margin: 0 -15px
    .card-item
      margin: 15px
      padding: 40px 38px 45px
      min-width: 250px
      min-height: 110px
      border-radius: 24px
      flex: 1 1 20%

// 标签卡片
.card-container.card-tags
  .card-wrap
    margin: 0 -8px
    .card-item
      margin: 8px
      padding: 20px 9px 20px
      min-width: 130px
      min-height: 90px
      border-radius: 12px
      flex: 1 1 15%


@media screen and (max-width: 760px)
  .card-container.card-articles
    .card-wrap
      margin: 0
      .card-item
        min-width: 70vw
        min-height: 200px
        margin: 0 15px 15px
        padding: 30px 30px 40px
  
  .card-container.card-categories
    .card-wrap
      margin: 0
      .card-item
        min-width: 70vw
        min-height: 120px
        margin: 0 15px 15px
        padding: 30px 30px 40px
  
  .card-container.card-tags
    padding: 15px
    .card-wrap
      margin: 0 -15px
      .card-item
        min-width: 30vw
        min-height: 60px
        margin: 0 15px 15px
        padding: 10px 10px 15px