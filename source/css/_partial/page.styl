
// 文章列表样式
.card-container.card-articles
  .article-link
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    width: 100%
    height: 100%
    z-index: 1
  
  .article-title
    font-size: 33px
    font-weight: 700
    line-height: 1.3
    margin-bottom: 20px

  .article-meta
    margin-bottom: 60px
    line-height: 1.3
  
  .article-category
      position: absolute
      bottom: 45px
      left: 30px
      z-index: 2

      .article-category-link
        border-radius: 20px
        padding: 4px 8px
        transition: all 0.2s ease

        &:hover
          color: #000000
          background-color: #ffffff

// 分类列表样式 标签列表样式 链接列表样式
.card-container.card-categories, .card-container.card-tags, .card-container.card-links
  article
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    .text-info
      position: relative
      text-align: center
      word-break: break-all

  &.card-container.card-categories
    .text-info
      font-size: 32px
      font-weight: bolder

  &.card-container.card-tags
    .text-info
      font-size: 24px
      font-weight: bolder

  &.card-container.card-links
    .text-info h3
      margin: 20px 0

// 文章内容样式
.article-content
  width: 100%
  max-width: max-content-width
  margin: 0 auto
  min-height: banner-margin * 2
  background-color: #ffffff
  padding: 20px 40px
  border-radius: 40px

  .article-header, .article-meta, .article-footer, .article-navs, .comment-container
    padding: 0 20px

  .article-tag-list
    display: flex

    a
      display: block
      color: #999999
      margin-right: 10px

      &:hover
        color: #555555

  .card-article-nav
    text-align: center;
  
    .article-nav-caption
      font-weight: 600

    .article-nav-title
      font-size: 28px
      margin-top: 20px

// 移动端样式
@media screen and (max-width: 760px)
  .card-container.card-articles
    .article-title
      font-size: 24px
    .article-meta
      margin-bottom: 45px

  .card-container.card-categories .text-info
    font-size: 24px

  .card-container.card-tags .text-info
    font-size: 14px
  
  .card-container.card-links .text-info h3
    margin: 10px 0

  .article-content
    width: auto
    min-width: 70vw
    margin: 0 15px
    padding: 30px 0

  